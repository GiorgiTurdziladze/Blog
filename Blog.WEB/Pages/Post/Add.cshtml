@model SDSU.EDU.ProjectCore.BLL.Models.PostModel
@{
    ViewData["Title"] = "Add";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>

    <div class="form-group">
        <h2 style="color: #f44336">Form of Adding a post</h2>
    </div>

    <form enctype="multipart/form-data" method="post" class="mt-3">
        <div class="container">

            <div class="form-group">
                <label><b>Title</b></label>
                <input type="text" class="form-control" placeholder="Enter Title" asp-for="Title">
                <span class="required" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label><b>Photo</b></label>
                <div class="custom-file">
                    <input asp-for="PhotoPath" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                    <span class="required" asp-validation-for="PhotoPath"></span>
                </div>
            </div>

            <div class="form-group">
                <label><b>Description</b></label>
                <div>
                    <textarea rows="7" cols="131" placeholder="add a description" asp-for="Description"></textarea>
                    <span class="required" asp-validation-for="Description"></span>
                </div>
            </div>


            <button type="submit" class="registerbtn" asp-action="Add" asp-controller="Post">Add Post</button>
            <div style="margin-top: 20px">
            </div>
        </div>

        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }

    </form>
</body>
</html>