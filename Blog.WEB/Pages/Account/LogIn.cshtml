@model Blog.BLL.Models.UserModel

@{
    ViewData["Title"] = "LogIn";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="&lt;link rel=&quot;stylesheet&quot; href=&quot;https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css&quot; integrity=&quot;sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T&quot; crossorigin=&quot;anonymous&quot;&gt;" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body>

<div class="form-group">
    <h2 style="color: #f44336">If you are not Registered, please Sign Up</h2>
</div>

<form method="post">
    <div class="container">

        <div class="form-group">
            <label><b>Email</b></label>
            <input type="email" class="form-control" placeholder="Enter Email" asp-for="Email">
            <span class="required" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label><b>Password</b></label>
            <input type="password" placeholder="Enter Password" asp-for="Password">
            <span class="required" asp-validation-for="Password"></span>
        </div>

        <button type="submit" class="registerbtn" asp-action="login" asp-controller="Account">Log In</button>
        <div style="margin-top: 20px">
            <p class="required">@ViewBag.message</p>
        </div>
    </div>

</form>

</body>
</html>